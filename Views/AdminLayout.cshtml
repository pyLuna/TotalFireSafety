					formData.append('file', file);

					// Send the file to the API using fetch
					fetch('/Admin/SaveImage', {
						method: 'POST',
						body: formData
					})
						.then(response => {
							if (!response.ok) {
								throw new Error('Network response was not ok');
							}
							return response.json();
						})
						.then(data => {
							window.location.reload();
							console.log('Response:', data);
						})
						.catch(error => {
