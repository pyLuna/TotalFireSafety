<script>


    function userFiltFunction() {
        document.getElementById("userFiltDropdown").classList.toggle("user-filter-show");
    }

    // Close the dropdown if the user clicks outside of it
    window.onclick = function (e) {
        if (!e.target.matches('.user-filter-btn')) {
            var myDropdown = document.getElementById("userFiltDropdown");
            if (myDropdown.classList.contains('user-filter-show')) {
                myDropdown.classList.remove('user-filter-show');
            }
        }
    }

    function userSortFunction() {
        document.getElementById("userSortDropdown").classList.toggle("user-sort-show");
    }

    // Close the dropdown if the user clicks outside of it
    window.onclick = function (e) {
        if (!e.target.matches('.user-sort-btn')) {
            var myDropdown = document.getElementById("userSortDropdown");
            if (myDropdown.classList.contains('user-sort-show')) {
                myDropdown.classList.remove('user-sort-show');
            }
        }
    }

    let canpopup = document.getElementById("can-popup");

    function canOpenPopup() {
        canpopup.classList.add("can-popup-show")
    }

    function canClosePopup() {
        canpopup.classList.remove("can-popup-show")
    }

    let rempopup = document.getElementById("rem-popup");

    function remOpenPopup() {
        rempopup.classList.add("rem-popup-show")
    }

    function remClosePopup() {
        rempopup.classList.remove("rem-popup-show")
    }

    function openAddNewContainer() {
        document.getElementById("add-new-container").style.display = "block";
    }

    function closeAddNewContainer() {
        document.getElementById("add-new-container").style.display = "none";
    }

    function openInputMemForm() {
        document.getElementById("input-mem-container").style.display = "block";
    }

    function closeInputMemForm() {
        document.getElementById("input-mem-container").style.display = "none";
    }

    function openInputPropForm(propTypeId, propDescription, propStatus, propSubject, propManpower) {
        document.getElementById("prop_description").value = propDescription;
        document.getElementById("project_id").value = propTypeId;
        document.getElementById("proj_subject").value = propSubject;

      

        // Set the selected option based on the propStatus value
        var statusSelect = document.getElementById("Engineer");
        for (var i = 0; i < statusSelect.options.length; i++) {
            if (statusSelect.options[i].value == propStatus) {
                statusSelect.selectedIndex = i;
                break;
            }
        }

        var manpowerTable = document.getElementById("propInput");
        var tbody = manpowerTable.getElementsByTagName("tbody")[0];
        tbody.innerHTML = "";

        var propManpowerArray = propManpower.split(",");
        for (var i = 0; i < propManpowerArray.length; i++) {
            var row = tbody.insertRow(-1);
            var cell = row.insertCell(0);
            cell.innerHTML = "<i class='las la-dot-circle'></i><b>" + propManpowerArray[i] + "</b>";
        }

        document.getElementById("prop-container").style.display = "block";
    }

    function updateProposal() {
        // Get the updated values from the input fields
        var propTypeId = document.getElementById("project_id").value;
        var propDescription = document.getElementById("prop_description").value;
        var propStatus = document.getElementById("Engineer").value;
        var propSubject = document.getElementById("proj_subject").value;

        // Build the manpower list from the table rows
        var manpowerList = [];
        var manpowerTable = document.getElementById("propInput");
        var rows = manpowerTable.getElementsByTagName("tr");
        for (var i = 0; i < rows.length; i++) {
            var cells = rows[i].getElementsByTagName("td");
            if (cells.length > 0) {
                var manpower = cells[0].getElementsByTagName("b")[0].innerText;
                manpowerList.push(manpower);
            }
        }
        var propManpower = manpowerList.join(",");

        // Send the updated values to the server-side script using AJAX
        var xhr = new XMLHttpRequest();
        xhr.open("POST", "/Admin/Update", true);
        xhr.setRequestHeader("Content-type", "application/x-www-form-urlencoded");
        xhr.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                // Handle the response from the server
                var response = JSON.parse(this.responseText);
                if (response.success) {
                    // Close the form and update the proposal list
                    document.getElementById("prop-container").style.display = "none";
                    getProposalList();
                } else {
                    // Display an error message
                    alert(response.message);
                }
            }
        };
        var data = "propTypeId=" + encodeURIComponent(propTypeId)
            + "&propDescription=" + encodeURIComponent(propDescription)
            + "&propStatus=" + encodeURIComponent(propStatus)
            + "&propSubject=" + encodeURIComponent(propSubject)
            + "&propManpower=" + encodeURIComponent(propManpower);
        xhr.send(data);
    }

    function closeInputPropForm() {
        document.getElementById("prop-container").style.display = "none";
    }

</script>
