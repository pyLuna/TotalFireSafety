						if("notification") {
							console.log('starting OnLoad()');
							OnLoad();
							CreateNotification();
							AddBadge();
						}
					});
					hubProxy.on('receiveMessage', function (message) {
						console.log("working");
					});
					connection.start().done(function () {
						// The connection has been established successfully
						console.log('Connection started');
						// Now you can send data through the connection
						var c = hubProxy.invoke("AddToGroup", '@Session["emp_no"]')
					}).fail(function () {
						// An error occurred while starting the connection
						console.log('Connection failed');
					});
					OnLoad();
				}
				function CreateNotification() {
					var container = document.getElementById("ntfCont");

					var display = ""
					display += `<div class="notif-list-container-active">`;
