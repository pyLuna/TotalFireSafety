@using TotalFireSafety.Models
@model List<NewProposal>


@{
    ViewBag.Title = "ProjectProposal";
    Layout = "~/Views/AdminLayout.cshtml";
    ViewBag.Proj = "active";
}

<div class="main-content">
    <header>
        <h2>
            <label for="nav-toggle">
                <span class="las la-bars"></span>
            </label>
            Proposal Lists
        </h2>
    </header>
    <main>

        <!-- PROPOSAL TABLE FOR ENGINEER -->

        <div class="propo-grid">
            <div class="propo-header">
                <h3>PROPOSAL LISTS</h3>


            </div>
            <div class="propo-projects">
                <div class="propo">
                    <div class="propo-body">
                        <div class="table-responsive" style="overflow-x: auto;">
                            <table width="100%">
                                <thead>
                                   
                                </thead>
                                <tbody>
                                    @foreach (var proposal in Model)
                                    {
                                        <tr class="read" onclick="openInputPropForm('@proposal.prop_type_id', '@proposal.prop_description', '@proposal.prop_status', '@proposal.prop_subject', '@proposal.prop_manpower')">
                                            <td><i class="las la-square-full"></i></td>
                                            <td><a href="#" name="prop_description">@proposal.prop_description</a></td>
                                            <td><label class="stat-appr" name="status">@proposal.prop_status</label></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- END -->
        @* NEW LAYOUT ADDITION - PROPOSAL REQUEST *@

        <div class="prop-container" id="prop-container">
            <div class="prop-main">
                <div class="prop-title">
                    <center> <input type="text" id="prop_description" value=" " /> </center>
                </div>

                <div class="prop-input-container">

                    <div class="prop-select">
                        <h3>
                            Proposal:
                        </h3>
                        <select id="Engineer" name="">
                            <option value="">--Status--</option>
                            <option value="Approved">Approved</option>
                            <option value="Approved">Declined</option>
                            <option value="Pending">Pending</option>
                        </select>

                    </div>

                    <div class="prop-main-input">
                        <textarea name="" id="proj_subject" placeholder="Place your proposal messege here.."></textarea>
                        <input type="text" id="project_id" value=""  hidden />
                    </div>

                    <div class="prop-list-input">
                        <div class="input-prop-list">
                            <div class="input-prop-grid">
                                <div class="input-prop-projects">
                                    <div class="input-prop">
                                        <div class="input-prop-body">
                                            <div class="table-responsive" style="overflow-x: auto;">
                                                <table id="propInput" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <td>
                                                                <b>Manpower List:</b>
                                                            </td>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td contenteditable="true"><i class="las la-dot-circle"></i><b></b></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


                <center>
                    <button id="saveButton" onclick="updateProposal()">Save</button>
                    <button onclick="closeInputPropForm()">Cancel</button>
                </center>
            </div>
        </div>

        @* END *@

        <div class="can-pop-container" id="can-popup">
            <img src="../../images/warning.png">
            <h2>System Warning!</h2>
            <p>Do you want to remove the user on the list?</p>
            <button type="button" onclick="remOpenPopup() + canClosePopup()">Yes</button>
            <button type="button" onclick="canClosePopup()">Cancel</button>
        </div>

        <div class="rem-pop-container" id="rem-popup">
            <img src="../../images/remove.png">
            <h2>Deleted!</h2>
            <p>User removed in the list successfully!</p>
            <button type="button" onclick="remClosePopup()">OK</button>
        </div>

    </main>

</div>



