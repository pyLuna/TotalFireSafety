                    <table id="pe-table">
                        <thead>
                        <th class="text-center text-light pe-th" colspan="4">
                            PROJECT DETAILS
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">PROJECT NAME</th>
                                <td>@ViewBag.ProjectName</td>
                                <th scope="row">PROJECT LEAD</th>
                                <td>@ViewBag.ProjectLead</td>
                            </tr>

                            <tr>
                                <th scope="row">SUBJECT</th>
                                <td>@ViewBag.Subject</td>
                                <th scope="row">START DATE</th>
                                <td>@ViewBag.Startdate</td>
                            </tr>
                            <tr>
                                <th scope="row">CLIENT</th>
                                <td>@ViewBag.Client</td>
                                <th scope="row">BASELINE FINISH</th>
                                <td>@ViewBag.Enddate</td>
                            </tr>
                            <tr>
                                <th scope="row">LOCATION SITE</th>
                                <td>@ViewBag.ProjectLoc</td>
                                <th scope="row">STATUS</th>
                                <td><div @*class="text-success"*@>@ViewBag.ProjectStats</div></td>
                            </tr>
                        </tbody>
                    </table>
                    <br><br>
                    <table id="pe-table">
                        <thead>
                        <th class="text-center text-light pe-th">
                            PROJECT DESCRIPTION
                        </th>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="p-3 pe-th-bot">
                                    @ViewBag.Description
                                    <br><br><br>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <div class="d-flex justify-content-between">
                        <table id="pe-table" class="table table-sm pe-table mr-2">
                            <thead>
                                <tr>
                                    <th class="text-center text-light pe-th" colspan="3">
                                        ATTENDANCE
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Manpower</th>
                                    <th>time - in</th>
                                    <th>Time - out</th>
                                </tr>
                                @foreach (var manpower in Model.Manpowers)
                                {
                                    var attendance = Model.Attendances.FirstOrDefault(a => a.atte_id == manpower.man_id);
                                    <tr>
                                        <td>@manpower.man_name</td>
                                        <td>@(attendance?.atte_timein?.ToString("hh:mm tt") ?? "-")</td>
                                        <td>@(attendance?.atte_timeout?.ToString("hh:mm tt") ?? "-")</td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <table id="pe-table" class="table table-sm pe-table ml-2">
                            <thead>
                            <th class="text-center text-light pe-th">
                                SCOPE OF WORK
                            </th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="p-3 pe-th-bot">
                                        @ViewBag.Scope
                                        <br><br><br><br><br><br>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                   
                </div>
