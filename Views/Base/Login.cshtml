@using TotalFireSafety.Models
@model Credential
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/BaseLayout.cshtml";
   
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/images/tfsti-logo-noname.png" alt="IMG">
                <span class="tfsti-motto">
                    Total Fire Safety and Technologies Inc.
                </span>
            </div>

            <form action="@Url.Action("Login","Base")" method="post" class="login100-form validate-form">
                <span class="login100-form-title">
                    Employee Login
                </span>
                <div style="color:red;">@ViewBag.Error</div>
                <div class="wrap-input100 validate-input" data-validate="Username is required">
                    <input class="input100" type="text" name="username" placeholder="Username">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user-circle" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input class="input100" type="password" name="password" placeholder="Password">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Login
                    </button>
                </div>

                <div class="text-center p-t-12">

                </div>

                <div class="text-center p-t-136">
                </div>
            </form>
        </div>
    </div>
</div>

