                var isoDate = new Date(Date.UTC(repDate.getFullYear(), repDate.getMonth(), repDate.getDate())).toISOString().split('T')[0];

                $.ajax({
                    url: '/Admin/GetAttendanceData',
                    type: 'GET',
                    dataType: 'json',
                    data: { date: isoDate },
                    success: function (attendanceData) {
                        var tableBody = $('#table-body');
                        tableBody.empty();

                        $.each(attendanceData, function (index, item) {
                            // Filter by atte_timein
                            var timeIn = item.TimeIn.match(/\/Date\((\d+)\)\//);
                            var isoTimeIn = null;
                            if (timeIn) {
                                var timeInDate = new Date(parseInt(timeIn[1], 10));
                                isoTimeIn = new Date(Date.UTC(timeInDate.getFullYear(), timeInDate.getMonth(), timeInDate.getDate(), timeInDate.getHours(), timeInDate.getMinutes())).toISOString();

                                // Only add rows to the table if atte_timein matches isoDate
                                if (isoTimeIn.split('T')[0] === isoDate) {
                                    var tr = $('<tr>').appendTo(tableBody);
                                    $('<td>').text(item.Manpower).appendTo(tr);
                                    $('<td>').text(item.Position).appendTo(tr);

                                    // Format time in 12-hour format
                                    var formattedTimeIn = new Date(isoTimeIn).toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true });
                                    $('<td>').text(formattedTimeIn).appendTo(tr);

                                    // Convert atte_timeout to ISO format if defined
                                    var timeOut = item.TimeOut.match(/\/Date\((\d+)\)\//);
                                    var isoTimeOut = null;
                                    if (timeOut) {
                                        var timeOutDate = new Date(parseInt(timeOut[1], 10));
                                        isoTimeOut = new Date(Date.UTC(timeOutDate.getFullYear(), timeOutDate.getMonth(), timeOutDate.getDate(), timeOutDate.getHours(), timeOutDate.getMinutes())).toISOString();
                                        var formattedTimeOut = new Date(isoTimeOut).toLocaleTimeString('en-US', { hour: 'numeric', minute: 'numeric', hour12: true });
                                        $('<td>').text(formattedTimeOut).appendTo(tr);
                                    } else {
                                        $('<td>').text('').appendTo(tr);
                                    }
                                }
                            }
                        });
                    },
                    error: function (xhr, status, error) {
                        console.log(xhr.responseText);
                    }
                });



                $.get('/Admin/GetReportImages', { rep_date: isoDate }, function (images) {
